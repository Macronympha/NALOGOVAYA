@model Налоговая.Models.users

@{
    ViewBag.Title = "Авторизация";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <section id="content">
            <form action="">
                <h1>Авторизация</h1>
                <div>
                    <div>
                        <label class="control-label col-md-2">Логин:</label>
                    </div>
                    @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
                </div>
                <div>
                    <div>
                        <label class="control-label col-md-2">Пароль:</label>
                    </div>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
                <div>
                    <input type="submit" value="Вход" />
                    <a href="/users/Create">Регистрация</a>
                </div>
            </form>

        </section>
    </div>
    <footer>
        <p>Авторизуйтесь или зарегистрируйтесь для использования приложения</p>
    </footer>
}

