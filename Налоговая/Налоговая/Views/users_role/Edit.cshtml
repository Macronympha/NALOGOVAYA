@model Налоговая.Models.users_role

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование роли</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="datagrid">
        <table class="table">
            <tr>
                <td>
                    Роль:
                </td>
                <td>
                    @Html.DropDownList("id_role", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_role, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    Пользователь:
                </td>
                <td>
                    @Html.DropDownList("id_users", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_users, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
